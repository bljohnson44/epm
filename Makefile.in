#
# Programs...
#

CC	=	@CC@
CHMOD	=	@CHMOD@
CP	=	@CP@
CXX	=	@CXX@
MKDIR	=	@MKDIR@ -p
RM	=	@RM@ -f
SHELL	=	/bin/sh
STRIP	=	@STRIP@


#
# Program options...
#
# OPTIM   defines the common compiler optimization/debugging options.
#

ARFLAGS	=	crvs
CFLAGS	=	@CFLAGS@ $(OPTIM)
CXXFLAGS =	@CXXFLAGS@ $(OPTIM)
SETUPLIBS =	@SETUPLIBS@
LDFLAGS	=	@LDFLAGS@ $(OPTIM)
LIBS	=	@LIBS@
OPTIM	=	@OPTIM@


#
# Manpage extensions...
#

CAT1EXT	=	@CAT1EXT@
MAN1EXT	=	@MAN1EXT@


#
# Directories...
#

bindir		=	@bindir@
datadir		=	@datadir@
exec_prefix	=	@exec_prefix@
mandir		=	@mandir@
prefix		=	@prefix@
libdir		=	@libdir@
srcdir		=	@srcdir@

VPATH		=	$(srcdir)


#
# Rules...
#

.SILENT:

.SUFFIXES:	.c .cxx .h .o
.c.o:
	echo Compiling $<...
	$(CC) $(CFLAGS) -I. -I$(srcdir) -c $<
.cxx.o:
	echo Compiling $<...
	$(CXX) $(CXXFLAGS) -I. -I$(srcdir) -c $<


#
# Targets...
#

TARGETS	=	epm @SETUP@
EPM_OBJS =	deb.o dist.o epm.o file.o inst.o pkg.o portable.o rpm.o \
		string.o swinstall.o tar.o
SETUP_OBJS =	setup.o setup2.o Fl_Check_Browser.o Fl_Wizard.o
OBJS	=	$(EPM_OBJS) $(SETUP_OBJS)


#
# Make all targets...
#

all:	$(TARGETS)


#
# Clean all object files...
#

clean:
	rm -f $(OBJS) $(TARGETS)


#
# Clean all object files and generated files...
#

distclean:
	rm -f $(OBJS) $(TARGETS) \
		config.cache config.h config.log config.status Makefile


#
# Install all targets...
#

install: epm @INSTALL_SETUP@
	echo Installing EPM programs in $(bindir)
	-$(MKDIR) $(bindir)
	$(RM) $(bindir)/epm
	$(CP) epm $(bindir)
	$(STRIP) $(bindir)/epm
	$(RM) $(bindir)/mkepmlist
	$(CP) mkepmlist $(bindir)
	echo Installing EPM manpages in $(mandir)/cat1 and $(mandir)/man1
	-$(MKDIR) $(mandir)/cat1
	$(RM) $(mandir)/cat1/epm.$(CAT1EXT)
	$(CP) $(srcdir)/epm.1 $(mandir)/cat1/epm.$(CAT1EXT)
	$(RM) $(mandir)/cat1/mkepmlist.$(CAT1EXT)
	$(CP) $(srcdir)/mkepmlist.1 $(mandir)/cat1/mkepmlist.$(CAT1EXT)
	-$(MKDIR) $(mandir)/man1
	$(RM) $(mandir)/man1/epm.1
	$(CP) $(srcdir)/epm.man $(mandir)/man1/epm.1
	$(RM) $(mandir)/man1/mkepmlist.1
	$(CP) $(srcdir)/mkepmlist.man $(mandir)/man1/mkepmlist.1
	echo Installing EPM documentation in $(datadir)/doc/epm
	-$(MKDIR) $(datadir)/doc
	-$(MKDIR) $(datadir)/doc/epm
	$(RM) $(datadir)/doc/epm/COPYING
	$(CP) $(srcdir)/COPYING $(datadir)/doc/epm
	$(RM) $(datadir)/doc/epm/README
	$(CP) $(srcdir)/README $(datadir)/doc/epm
	$(RM) $(datadir)/doc/epm/*.html
	$(CP) $(srcdir)/*.html $(datadir)/doc/epm

install-setup:	setup
	echo Installing EPM setup in $(libdir)/setup
	-$(MKDIR) $(libdir)/epm
	$(RM) $(libdir)/epm/setup
	$(CP) setup $(libdir)/epm
	$(STRIP) $(libdir)/epm/setup


#
# Make distributions using EPM...
#

portable: $(TARGETS)
	./epm -v epm

native: $(TARGETS)
	./epm -f native -v epm

rpm: $(TARGETS)
	./epm -f rpm -v epm

deb: $(TARGETS)
	./epm -f deb -v epm

pkg: $(TARGETS)
	./epm -f pkg -v epm

depot: $(TARGETS)
	./epm -f depot -v epm

tardist: $(TARGETS)
	./epm -f tardist -v epm


#
# epm
#

epm:	$(EPM_OBJS)
	echo Linking epm...
	$(CC) $(LDFLAGS) -o epm $(EPM_OBJS)

$(EPM_OBJS):	epm.h epmstring.h


#
# setup
#

setup:	$(SETUP_OBJS)
	echo Linking setup...
	$(CXX) $(LDFLAGS) -o setup $(SETUP_OBJS) $(SETUPLIBS) $(LIBS)

setup.o:	setup.h setup2.h Fl_Check_Browser.h Fl_Wizard.h
setup2.o:	setup.h setup2.h Fl_Check_Browser.h Fl_Wizard.h
Fl_Wizard.o:	Fl_Wizard.h
Fl_Check_Browser.o:	Fl_Check_Browser.h

$(OBJS):	Makefile config.h

