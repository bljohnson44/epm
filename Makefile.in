#
# Programs...
#

CC	=	@CC@
CHMOD	=	@CHMOD@
CP	=	@CP@
MKDIR	=	@MKDIR@ -p
RM	=	@RM@ -f
SHELL	=	/bin/sh

#
# Program options...
#
# OPTIM   defines the common compiler optimization/debugging options.
#

ARFLAGS	=	crvs
CFLAGS	=	@CFLAGS@ $(OPTIM)
LDFLAGS	=	@LDFLAGS@ $(OPTIM)
LIBS	=	@LIBS@
OPTIM	=	@OPTIM@

#
# Directories...
#

bindir		=	@bindir@
exec_prefix	=	@exec_prefix@
mandir		=	@mandir@
prefix		=	@prefix@

#
# Rules...
#

.SILENT:

.SUFFIXES:	.c .h .o
.c.o:
	echo Compiling $<...
	$(CC) $(CFLAGS) -c $<


TARGETS	=	epm
OBJS	=	epm.o string.o

#
# Make all targets...
#

all:	$(TARGETS)

#
# Clean all object files...
#

clean:
	rm -f $(OBJS) $(TARGETS)

#
# Install all targets...
#

install: epm
	echo Installing EPM in $(bindir) and $(mandir)/man1
	-$(MKDIR) $(bindir)
	$(RM) $(bindir)/epm
	$(CP) epm $(bindir)/epm
	$(CHMOD) 755 $(bindir)/epm
	-$(MKDIR) $(mandir)/man1
	$(RM) $(mandir)/man1/epm.1
	$(CP) epm.1 $(mandir)/man1
	$(CHMOD) 644 $(mandir)/man1/epm.1

#
# epm
#

epm:	$(OBJS)
	echo Linking epm...
	$(CC) $(LDFLAGS) -o epm $(OBJS)

$(OBJS):	Makefile config.h string.h

