#
# Programs...
#

CC	=	@CC@
CHMOD	=	@CHMOD@
CP	=	@CP@
CXX	=	@CXX@
MKDIR	=	@MKDIR@ -p
RM	=	@RM@ -f
SHELL	=	/bin/sh


#
# Program options...
#
# OPTIM   defines the common compiler optimization/debugging options.
#

ARFLAGS	=	crvs
CFLAGS	=	@CFLAGS@ $(OPTIM)
CXXFLAGS =	@CXXFLAGS@ $(OPTIM)
LDFLAGS	=	@LDFLAGS@ $(OPTIM)
LIBS	=	@LIBS@
OPTIM	=	@OPTIM@


#
# Directories...
#

bindir		=	@bindir@
exec_prefix	=	@exec_prefix@
mandir		=	@mandir@
prefix		=	@prefix@


#
# Rules...
#

.SILENT:

.SUFFIXES:	.c .cxx .h .o
.c.o:
	echo Compiling $<...
	$(CC) $(CFLAGS) -c $<
.cxx.o:
	echo Compiling $<...
	$(CXX) $(CXXFLAGS) -c $<


#
# Targets...
#

TARGETS	=	epm @SETUP@
EPM_OBJS =	deb.o dist.o epm.o file.o inst.o pkg.o portable.o rpm.o \
		string.o swinstall.o tar.o
SETUP_OBJS =	setup.o setup2.o Fl_Check_Browser.o Fl_Wizard.o
OBJS	=	$(EPM_OBJS) $(SETUP_OBJS)


#
# Make all targets...
#

all:	$(TARGETS)


#
# Clean all object files...
#

clean:
	rm -f $(OBJS) $(TARGETS)


#
# Clean all object files and generated files...
#

distclean:
	rm -f $(OBJS) $(TARGETS) \
		config.cache config.h config.log config.status Makefile


#
# Install all targets...
#

install: $(TARGETS)
	echo Installing EPM in $(bindir) and $(mandir)/man1
	-$(MKDIR) $(bindir)
	$(RM) $(bindir)/epm
	$(CP) $(TARGETS) $(bindir)
	-$(MKDIR) $(mandir)/man1
	$(RM) $(mandir)/man1/epm.1
	$(CP) epm.man $(mandir)/man1/epm.1


#
# epm
#

epm:	$(EPM_OBJS)
	echo Linking epm...
	$(CC) $(LDFLAGS) -o epm $(EPM_OBJS)

$(EPM_OBJS):	epm.h string.h


#
# setup
#

setup:	$(SETUP_OBJS)
	echo Linking setup...
	$(CXX) -static $(LDFLAGS) -o setup $(SETUP_OBJS) $(LIBS)

setup.o:	setup.h setup2.h Fl_Check_Browser.h Fl_Wizard.h
setup2.o:	setup.h setup2.h Fl_Check_Browser.h Fl_Wizard.h
Fl_Wizard.o:	Fl_Wizard.h
Fl_Check_Browser.o:	Fl_Check_Browser.h

$(OBJS):	Makefile config.h

