#
# Programs...
#

CC	=	@CC@
CHMOD	=	@CHMOD@
CP	=	@CP@
CXX	=	@CXX@
MKDIR	=	@MKDIR@ -p
RM	=	@RM@ -f
SHELL	=	/bin/sh

#
# Program options...
#
# OPTIM   defines the common compiler optimization/debugging options.
#

ARFLAGS	=	crvs
CFLAGS	=	@CFLAGS@ $(OPTIM)
CXXFLAGS =	@CXXFLAGS@ $(OPTIM)
LDFLAGS	=	@LDFLAGS@ $(OPTIM)
LIBS	=	@LIBS@
OPTIM	=	@OPTIM@

#
# Directories...
#

bindir		=	@bindir@
exec_prefix	=	@exec_prefix@
mandir		=	@mandir@
prefix		=	@prefix@

#
# Rules...
#

.SILENT:

.SUFFIXES:	.c .cxx .h .o
.c.o:
	echo Compiling $<...
	$(CC) $(CFLAGS) -c $<
.cxx.o:
	echo Compiling $<...
	$(CXX) $(CXXFLAGS) -c $<


TARGETS	=	epm @SETUP@
OBJS	=	epm.o string.o setup.o setup2.o Fl_Wizard.o

#
# Make all targets...
#

all:	$(TARGETS)

#
# Clean all object files...
#

clean:
	rm -f $(OBJS) $(TARGETS)

#
# Install all targets...
#

install: $(TARGETS)
	echo Installing EPM in $(bindir) and $(mandir)/man1
	-$(MKDIR) $(bindir)
	$(RM) $(bindir)/epm
	$(CP) $(TARGETS) $(bindir)
	-$(MKDIR) $(mandir)/man1
	$(RM) $(mandir)/man1/epm.1
	$(CP) epm.man $(mandir)/man1/epm.1

#
# epm
#

epm:	epm.o string.o
	echo Linking epm...
	$(CC) $(LDFLAGS) -o epm epm.o string.o

epm.o:		string.h
string.o:	string.h

#
# setup
#

setup:	setup.o setup2.o Fl_Wizard.o
	echo Linking setup...
	$(CXX) $(LDFLAGS) -o setup setup.o setup2.o Fl_Wizard.o $(LIBS)

setup.o:	setup.h Fl_Wizard.h
setup2.o:	setup.h Fl_Wizard.h
Fl_Wizard.o:	Fl_Wizard.h

$(OBJS):	Makefile config.h

